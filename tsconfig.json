{
  "compilerOptions": {
    "module": "ES6",
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "sourceMap": true,
    "noImplicitAny": true,
    "outDir": "./build/",
    "allowJs": true,
    "moduleResolution": "node",
    "baseUrl": "./src/",
    "paths": {
      "app/*": ["app/*"],
      "components/*": ["components/*"],
      "utils/*": ["utils/*"]
    }
  },
  "include": ["./src/"]
}
